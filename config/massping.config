[
    {massping, [
        %% Default ports to scan if not specified
        {default_ports, [80, 443, 22, 3389, 8080]},
        
        %% TCP connection timeout in milliseconds
        {connect_timeout, 1000},
        
        %% Rate limit: requests per second per node
        {rate_limit, 10000},
        
        %% Maximum parallel connections
        {max_parallel, 100000},
        
        %% Number of retries on connection failure
        {retry_count, 2},
        
        %% Default output format: json, csv, or xml
        {output_format, json}
    ]},
    
    %% Cluster configuration for distributed scanning
    {cluster, [
        %% List of cluster nodes
        {nodes, [
            'massping1@192.168.1.10',
            'massping2@192.168.1.11'
        ]},
        
        %% Distribution strategy: round_robin, hash_based, or least_loaded
        {distribution_strategy, round_robin},
        
        %% Rate limit per node in cluster mode
        {rate_per_node, 5000}
    ]},
    
    %% Logging configuration
    {kernel, [
        {logger_level, info},
        {logger, [
            {handler, default, logger_std_h, #{
                level => info,
                formatter => {logger_formatter, #{
                    single_line => true,
                    template => [time, " [", level, "] ", msg, "\n"]
                }}
            }}
        ]}
    ]},
    
    %% SASL configuration
    {sasl, [
        {sasl_error_logger, false}
    ]}
].
